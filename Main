  <script>
    let currentView = 'dashboard';
    let allEmployees = [];
    let offices = [];
    let positions = [];

    // Initialize
    loadCurrentUser();
    loadDashboard();

    function loadCurrentUser() {
      google.script.run
        .withSuccessHandler(email => {
          const shortEmail = email.length > 20 ? email.substring(0, 20) + '...' : email;
          document.getElementById('currentUser').textContent = shortEmail;
          document.getElementById('currentUser').title = email;
        })
        .getCurrentUserEmail();
    }

    // ==================== NAVIGATION ====================
    function navigateTo(view) {
      document.querySelectorAll('.nav-item').forEach(item => item.classList.remove('active'));
      event.target.closest('.nav-item').classList.add('active');
      
      currentView = view;
      
      switch(view) {
        case 'dashboard':
          loadDashboard();
          break;
        case 'employees':
          loadEmployeesView();
          break;
        case 'coc':
          loadCOCView();
          break;
        case 'reports':
          loadReportsView();
          break;
        case 'masterdata':
          loadMasterDataView();
          break;
      }
    }

    // ==================== DASHBOARD ====================
    function loadDashboard() {
      document.getElementById('mainContent').innerHTML = `
        <div class="page-header">
          <h1 class="page-title">Dashboard</h1>
          <p class="page-subtitle">Overview of your compensatory time tracking system</p>
        </div>

        <div class="stats-grid">
          <div class="stat-card">
            <div class="stat-icon" style="background: #e6f9ed; color: #00b528;">
              <i class="fas fa-coins"></i>
            </div>
            <div class="stat-value" style="color: #00b528;" id="totalActiveCOC">0.0</div>
            <div class="stat-label">Total Active COC (hrs)</div>
          </div>

          <div class="stat-card">
            <div class="stat-icon" style="background: #f0eeff; color: #7c3aed;">
              <i class="fas fa-hourglass-half"></i>
            </div>
            <div class="stat-value" style="color: #7c3aed;" id="totalUncertifiedCOC">0.0</div>
            <div class="stat-label">Uncertified COC (hrs)</div>
          </div>

          <div class="stat-card">
            <div class="stat-icon" style="background: #fff5e6; color: #f59e0b;">
              <i class="fas fa-exclamation-triangle"></i>
            </div>
            <div class="stat-value" style="color: #f59e0b;" id="expiringCOC">0.0</div>
            <div class="stat-label">Expiring in 30 Days (hrs)</div>
          </div>

          <div class="stat-card">
            <div class="stat-icon" style="background: #e6f3ff; color: #3b82f6;">
              <i class="fas fa-users"></i>
            </div>
            <div class="stat-value" style="color: #3b82f6;" id="activeEmployees">0</div>
            <div class="stat-label">Active Employees</div>
          </div>
        </div>

        <div class="card">
          <div class="card-header">
            <div class="card-title">Recent Activity</div>
          </div>
          <div class="card-body">
            <div style="text-align: center; padding: 3rem 0; color: #697386;">
              <i class="fas fa-inbox" style="font-size: 3rem; margin-bottom: 1rem; opacity: 0.3;"></i>
              <p>No recent activity</p>
            </div>
          </div>
        </div>
      `;
      
      loadDashboardStats();
    }

    function loadDashboardStats() {
      document.getElementById('totalActiveCOC').textContent = '0.0';
      document.getElementById('totalUncertifiedCOC').textContent = '0.0';
      document.getElementById('expiringCOC').textContent = '0.0';
      
      google.script.run
        .withSuccessHandler(employees => {
          const activeCount = employees.filter(e => e.status === 'Active').length;
          document.getElementById('activeEmployees').textContent = activeCount;
        })
        .getAllEmployees();
    }

    // ==================== EMPLOYEE MANAGEMENT ====================
    function loadEmployeesView() {
      const container = document.getElementById('mainContent');
      container.innerHTML = `
        <div class="page-header">
          <div style="display: flex; justify-content: space-between; align-items: flex-start;">
            <div>
              <h1 class="page-title">Employee Management</h1>
              <p class="page-subtitle">Manage employee records and information</p>
            </div>
            <div style="display: flex; gap: 0.75rem;">
              <button onclick="openHistoricalBalanceForm()" class="btn btn-secondary">
                <i class="fas fa-history"></i>
                <span>Log Historical Balance</span>
              </button>
              <button onclick="openAddEmployeeForm()" class="btn btn-primary">
                <i class="fas fa-plus"></i>
                <span>Add Employee</span>
              </button>
            </div>
          </div>
        </div>
        
        <div class="card" style="margin-bottom: 1.5rem;">
          <div class="card-body">
            <div class="search-container">
              <i class="fas fa-search search-icon"></i>
              <input type="text" id="employeeSearch" placeholder="Search employees by name or ID..." 
                     class="search-input" oninput="filterEmployees()">
            </div>
          </div>
        </div>
        
        <div class="card">
          <div id="employeeTableContainer">
            <div style="text-align: center; padding: 3rem; color: #697386;">
              <i class="fas fa-spinner fa-spin" style="font-size: 2rem; margin-bottom: 1rem;"></i>
              <p>Loading employees...</p>
            </div>
          </div>
        </div>
      `;
      
      loadEmployees();
      loadDropdownData();
    }

    function loadEmployees() {
      google.script.run
        .withSuccessHandler(employees => {
          allEmployees = employees;
          renderEmployeeTable(employees);
        })
        .withFailureHandler(err => {
          document.getElementById('employeeTableContainer').innerHTML = 
            '<div style="padding: 2rem; text-align: center; color: #ef4444;">Error loading employees: ' + err.message + '</div>';
        })
        .getAllEmployees();
    }

    function loadDropdownData() {
      google.script.run.withSuccessHandler(data => { offices = data; }).getAllOffices();
      google.script.run.withSuccessHandler(data => { positions = data; }).getAllPositions();
    }

    function renderEmployeeTable(employees) {
      const container = document.getElementById('employeeTableContainer');
      if (!employees || employees.length === 0) {
        container.innerHTML = '<div style="padding: 3rem; text-align: center; color: #697386;">No employees found</div>';
        return;
      }

      let html = '<table><thead><tr>';
      html += '<th>ID</th><th>Name</th><th>Position</th><th>Office</th><th>Status</th><th>Actions</th>';
      html += '</tr></thead><tbody>';

      employees.forEach(emp => {
        const fullName = [emp.firstName, emp.middleInitial, emp.lastName, emp.suffix].filter(x => x).join(' ');
        const statusClass = emp.status === 'Active' ? 'badge-success' : 'badge-inactive';

        html += `<tr>
          <td style="font-weight: 600;">${emp.employeeId}</td>
          <td style="font-weight: 500;">${fullName}</td>
          <td>${emp.position || '-'}</td>
          <td>${emp.office || '-'}</td>
          <td><span class="badge ${statusClass}">${emp.status}</span></td>
          <td>
            <button onclick='openEditEmployeeForm(${JSON.stringify(emp).replace(/'/g, "&apos;")})' 
                    style="color: #00b528; background: none; border: none; cursor: pointer; font-weight: 600; font-size: 0.9375rem;">
              <i class="fas fa-edit"></i> Edit
            </button>
          </td>
        </tr>`;
      });

      html += '</tbody></table>';
      container.innerHTML = html;
    }

    function filterEmployees() {
      const searchTerm = document.getElementById('employeeSearch').value.toLowerCase();
      const filtered = allEmployees.filter(emp => {
        const fullName = [emp.firstName, emp.middleInitial, emp.lastName, emp.suffix].filter(x => x).join(' ').toLowerCase();
        return fullName.includes(searchTerm) || emp.employeeId.toString().includes(searchTerm);
      });
      renderEmployeeTable(filtered);
    }

    function openAddEmployeeForm() {
      const formHtml = `
        <div style="width: 600px; padding: 2rem;">
          <h3 style="font-size: 1.5rem; font-weight: 700; color: #1a1f36; margin-bottom: 0.5rem;">Add New Employee</h3>
          <p style="color: #697386; margin-bottom: 2rem; font-size: 0.9375rem;">Enter employee information</p>
          
          <form id="employeeForm" onsubmit="event.preventDefault(); saveEmployee();">
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; margin-bottom: 1rem;">
              <div>
                <label class="form-label">Last Name <span style="color: #ef4444;">*</span></label>
                <input type="text" name="lastName" required class="form-input">
              </div>
              <div>
                <label class="form-label">First Name <span style="color: #ef4444;">*</span></label>
                <input type="text" name="firstName" required class="form-input">
              </div>
            </div>
            
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; margin-bottom: 1rem;">
              <div>
                <label class="form-label">Middle Initial</label>
                <input type="text" name="middleInitial" maxlength="1" class="form-input">
              </div>
              <div>
                <label class="form-label">Suffix</label>
                <input type="text" name="suffix" class="form-input">
              </div>
            </div>
            
            <div style="margin-bottom: 1rem;">
              <label class="form-label">Position</label>
              <select name="position" class="form-input">
                <option value="">Select Position</option>
                ${positions.map(p => '<option value="' + p + '">' + p + '</option>').join('')}
              </select>
            </div>
            
            <div style="margin-bottom: 1rem;">
              <label class="form-label">Office</label>
              <select name="office" class="form-input">
                <option value="">Select Office</option>
                ${offices.map(o => '<option value="' + o + '">' + o + '</option>').join('')}
              </select>
            </div>
            
            <div style="margin-bottom: 2rem;">
              <label class="form-label">Status</label>
              <select name="status" class="form-input">
                <option value="Active">Active</option>
                <option value="Inactive">Inactive</option>
              </select>
            </div>
            
            <div style="display: flex; gap: 0.75rem; justify-content: flex-end;">
              <button type="button" onclick="hideOverlay()" class="btn btn-secondary">Cancel</button>
              <button type="submit" id="saveBtn" class="btn btn-primary">Save Employee</button>
            </div>
          </form>
        </div>
      `;
      showOverlay(formHtml);
    }

    function saveEmployee() {
      const form = document.getElementById('employeeForm');
      const formData = new FormData(form);
      const employeeData = Object.fromEntries(formData);
      const btn = document.getElementById('saveBtn');
      
      btn.disabled = true;
      btn.textContent = 'Saving...';

      google.script.run
        .withSuccessHandler(result => {
          if (result.success) {
            showAlert('Employee created successfully', 'success');
            hideOverlay();
            loadEmployees();
          } else {
            showAlert(result.message, 'error');
            btn.disabled = false;
            btn.textContent = 'Save Employee';
          }
        })
        .withFailureHandler(err => {
          showAlert('Error: ' + err.message, 'error');
          btn.disabled = false;
          btn.textContent = 'Save Employee';
        })
        .createEmployee(employeeData);
    }

    function openEditEmployeeForm(employee) {
      const formHtml = `
        <div style="width: 600px; padding: 2rem;">
          <h3 style="font-size: 1.5rem; font-weight: 700; color: #1a1f36; margin-bottom: 0.5rem;">Edit Employee</h3>
          <p style="color: #697386; margin-bottom: 2rem; font-size: 0.9375rem;">Update employee information</p>
          
          <form id="employeeEditForm" onsubmit="event.preventDefault(); updateEmployee(${employee.employeeId});">
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; margin-bottom: 1rem;">
              <div>
                <label class="form-label">Last Name <span style="color: #ef4444;">*</span></label>
                <input type="text" name="lastName" value="${employee.lastName || ''}" required class="form-input">
              </div>
              <div>
                <label class="form-label">First Name <span style="color: #ef4444;">*</span></label>
                <input type="text" name="firstName" value="${employee.firstName || ''}" required class="form-input">
              </div>
            </div>
            
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; margin-bottom: 1rem;">
              <div>
                <label class="form-label">Middle Initial</label>
                <input type="text" name="middleInitial" value="${employee.middleInitial || ''}" maxlength="1" class="form-input">
              </div>
              <div>
                <label class="form-label">Suffix</label>
                <input type="text" name="suffix" value="${employee.suffix || ''}" class="form-input">
              </div>
            </div>
            
            <div style="margin-bottom: 1rem;">
              <label class="form-label">Position</label>
              <select name="position" class="form-input">
                <option value="">Select Position</option>
                ${positions.map(p => '<option value="' + p + '" ' + (p === employee.position ? 'selected' : '') + '>' + p + '</option>').join('')}
              </select>
            </div>
            
            <div style="margin-bottom: 1rem;">
              <label class="form-label">Office</label>
              <select name="office" class="form-input">
                <option value="">Select Office</option>
                ${offices.map(o => '<option value="' + o + '" ' + (o === employee.office ? 'selected' : '') + '>' + o + '</option>').join('')}
              </select>
            </div>
            
            <div style="margin-bottom: 2rem;">
              <label class="form-label">Status</label>
              <select name="status" class="form-input">
                <option value="Active" ${employee.status === 'Active' ? 'selected' : ''}>Active</option>
                <option value="Inactive" ${employee.status === 'Inactive' ? 'selected' : ''}>Inactive</option>
              </select>
            </div>
            
            <div style="display: flex; gap: 0.75rem; justify-content: flex-end;">
              <button type="button" onclick="hideOverlay()" class="btn btn-secondary">Cancel</button>
              <button type="submit" id="updateBtn" class="btn btn-primary">Update Employee</button>
            </div>
          </form>
        </div>
      `;
      showOverlay(formHtml);
    }

    function updateEmployee(employeeId) {
      const form = document.getElementById('employeeEditForm');
      const formData = new FormData(form);
      const employeeData = Object.fromEntries(formData);
      const btn = document.getElementById('updateBtn');
      
      btn.disabled = true;
      btn.textContent = 'Updating...';

      google.script.run
        .withSuccessHandler(result => {
          if (result.success) {
            showAlert('Employee updated successfully', 'success');
            hideOverlay();
            loadEmployees();
          } else {
            showAlert(result.message, 'error');
            btn.disabled = false;
            btn.textContent = 'Update Employee';
          }
        })
        .withFailureHandler(err => {
          showAlert('Error: ' + err.message, 'error');
          btn.disabled = false;
          btn.textContent = 'Update Employee';
        })
        .updateEmployee(employeeId, employeeData);
    }

    // ==================== COC MANAGEMENT ====================
