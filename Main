      <div class="sidebar-nav">
        <div class="nav-item active" onclick="navigateTo('dashboard')">
          <i class="fas fa-home"></i>
          <span>Dashboard</span>
        </div>
        <div class="nav-item" onclick="navigateTo('employees')">
          <i class="fas fa-users"></i>
          <span>Employees</span>
        </div>
        <div class="nav-item" onclick="navigateTo('coc')">
          <i class="fas fa-business-time"></i>
          <span>COC Management</span>
        </div>
        <div class="nav-item" onclick="navigateTo('reports')">
          <i class="fas fa-chart-line"></i>
          <span>Reports</span>
        </div>
        <div class="nav-item" onclick="navigateTo('masterdata')">
